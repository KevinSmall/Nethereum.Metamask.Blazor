@inherits DisplayBase
@using Microsoft.AspNetCore.Components

<div class="card bg-light mb-3">

    <div class="card-header">Display PO</div>
    <div class="card-body text-dark">

        <form>
            <div class="form-group row">
                <label for="ethPoNumber" class="col-sm-3 col-form-label">Ethereum Purchase Order Number</label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" readonly id="ethPoNumber" @bind="@PurchaseOrder.EthPurchaseOrderNumber" />
                </div>
            </div>
            <div class="form-group row">
                <label for="buyerSystemId" class="col-sm-3 col-form-label">Buyer System ID</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" readonly id="buyerSystemId" @bind="@PurchaseOrder.BuyerSysId" />
                </div>
            </div>
            <div class="form-group row">
                <label for="sellerSystemId" class="col-sm-3 col-form-label">Seller System ID</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" readonly id="sellerSystemId" @bind="@PurchaseOrder.SellerSysId" />
                </div>
            </div>
            <div class="form-group row">
                <label for="sellerSalesOrderNo" class="col-sm-3 col-form-label">Seller Sales Order Number</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" readonly id="sellerSalesOrderNo" @bind="@PurchaseOrder.SellerSalesOrderNumber" />
                </div>
            </div>            
            <div class="form-group row">
                <label for="buyerProductId" class="col-sm-3 col-form-label">Buyer Product ID</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" readonly id="buyerProductId" @bind="@PurchaseOrder.BuyerProductId" />
                </div>
            </div>            
            <div class="form-group row">
                <label for="currencyKey" class="col-sm-3 col-form-label">Currency Key</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" readonly id="currencyKey" @bind="@PurchaseOrder.Currency" />
                </div>
            </div>
            <div class="form-group row">
                <label for="currencyAddress" class="col-sm-3 col-form-label">Currency Address</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" readonly id="currencyAddress" @bind="@PurchaseOrder.CurrencyAddress" />
                </div>
            </div>
            <div class="form-group row">
                <label for="totalQuantity" class="col-sm-3 col-form-label">Total Quantity</label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" readonly id="totalQuantity" @bind="@PurchaseOrder.TotalQuantity" />
                </div>
            </div>
            <div class="form-group row">
                <label for="totalValue" class="col-sm-3 col-form-label">Total Value</label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" readonly id="totalValue" @bind="@PurchaseOrder.TotalValue" />
                </div>
            </div>
            <div class="form-group row">
                <label for="openInvoiceQuantity" class="col-sm-3 col-form-label">Open Invoice Quantity</label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" readonly id="openInvoiceQuantity" @bind="@PurchaseOrder.OpenInvoiceQuantity" />
                </div>
            </div>
            <div class="form-group row">
                <label for="openInvoiceValue" class="col-sm-3 col-form-label">Open Invoice Value</label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" readonly id="openInvoiceValue" @bind="@PurchaseOrder.OpenInvoiceValue" />
                </div>
            </div>
            <div class="form-group row">
                <label for="poStatusCode" class="col-sm-3 col-form-label">PO Status Code</label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" readonly id="poStatusCode" @bind="@PurchaseOrder.PoStatus" />
                </div>
            </div>
            <div class="form-group row">
                <label for="poStatus" class="col-sm-3 col-form-label">PO Status</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" readonly id="poStatus" @bind="@PurchaseOrder.PoStatusDesc" />
                </div>
            </div>
            <div class="form-group row">
                <label for="wiProcessStatus" class="col-sm-3 col-form-label">Work Item Process Status</label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" readonly id="wiProcessStatus" @bind="@PurchaseOrder.WiProcessStatus" />
                </div>
            </div>

        </form>

        <div class="form-group">
            @if (IsBusy)
            {
                <button class="btn btn-primary" type="button" disabled>
                    <span class="spinner-border spinner-border-sm" role="status"></span>
                    Get PO
                </button>
            }
            else
            {
                <button class="btn btn-primary" type="button" @onclick="@DisplayPo">
                    Get PO
                </button>
            }
        </div>
        <p>@AdditionalMessage</p>
    </div>
</div>
